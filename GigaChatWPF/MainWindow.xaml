<Window x:Class="GigaChatWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор обоев GigaChat" 
        Height="720" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFF"
        FontFamily="Segoe UI">

    <!-- Ресурсы для стилей -->
    <Window.Resources>
        <!-- Тень для элементов -->
        <DropShadowEffect x:Key="DropShadow" 
                     BlurRadius="15" 
                     ShadowDepth="0" 
                     Opacity="0.1" 
                     Color="#000000"/>

        <!-- Стиль для заголовков секций -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для кнопок при наведении -->
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="12" 
                Margin="0,0,0,15"
                Padding="15"
                BorderThickness="1"
                BorderBrush="#E2E8F0"
                Effect="{StaticResource DropShadow}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock FontSize="28" 
                          FontWeight="SemiBold" 
                          Foreground="#1E293B"
                          VerticalAlignment="Center">
                    🎨 <Run Text="Дизайнер обоев"/>
                </TextBlock>
                <TextBlock FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#3B82F6"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0">
                    GigaChat
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Основной контент в двух колонках -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка: Настройки -->
            <ScrollViewer Grid.Column="0" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="0,0,15,0">
                <StackPanel>
                    <!-- Основной запрос -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,0,15"
                            BorderThickness="1"
                            BorderBrush="#E2E8F0">
                        <StackPanel>
                            <TextBlock Text="Основная идея" 
                                      Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="PromptTextBox" 
                                    Height="100" 
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    Text="Красивый пейзаж с горами и озером"
                                    FontSize="14"
                                    Padding="10"
                                    BorderBrush="#CBD5E1"
                                    BorderThickness="1"/>
                        </StackPanel>
                    </Border>

                    <!-- Стиль и цвета в одной строке -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Стиль -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="20"
                                BorderThickness="1"
                                BorderBrush="#E2E8F0">
                            <StackPanel>
                                <TextBlock Text="Стиль" 
                                          Style="{StaticResource SectionHeader}"/>
                                <ComboBox x:Name="StyleComboBox" 
                                         SelectedIndex="0"
                                         Padding="8"
                                         BorderBrush="#CBD5E1"
                                         BorderThickness="1">
                                    <ComboBoxItem Content="Реализм"/>
                                    <ComboBoxItem Content="Цифровая живопись"/>
                                    <ComboBoxItem Content="Минимализм"/>
                                    <ComboBoxItem Content="Абстракция"/>
                                    <ComboBoxItem Content="Киберпанк"/>
                                </ComboBox>
                                <TextBox x:Name="CustomStyleTextBox" 
                                        Margin="0,10,0,0"
                                        Text="Свой вариант..."
                                        Foreground="#94A3B8"
                                        GotFocus="CustomStyleTextBox_GotFocus"
                                        LostFocus="CustomStyleTextBox_LostFocus"
                                        Padding="8"
                                        BorderBrush="#CBD5E1"
                                        BorderThickness="1"/>
                            </StackPanel>
                        </Border>

                        <!-- Цветовая палитра -->
                        <Border Grid.Column="2" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="20"
                                BorderThickness="1"
                                BorderBrush="#E2E8F0">
                            <StackPanel>
                                <TextBlock Text="Цвета" 
                                          Style="{StaticResource SectionHeader}"/>
                                <CheckBox x:Name="WarmColorsCheckBox" 
                                         Content="Тёплые" 
                                         Margin="0,5,0,0"/>
                                <CheckBox x:Name="ColdColorsCheckBox" 
                                         Content="Холодные" 
                                         Margin="0,5,0,0"/>
                                <CheckBox x:Name="PastelColorsCheckBox" 
                                         Content="Пастель" 
                                         Margin="0,5,0,0"/>
                                <CheckBox x:Name="BrightColorsCheckBox" 
                                         Content="Яркие" 
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Пропорции и настроение в одной строке -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Пропорции -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="20"
                                BorderThickness="1"
                                BorderBrush="#E2E8F0">
                            <StackPanel>
                                <TextBlock Text="Пропорции" 
                                          Style="{StaticResource SectionHeader}"/>
                                <RadioButton x:Name="Ratio16_9" 
                                            Content="16:9 (Широкий)" 
                                            GroupName="AspectRatio" 
                                            Margin="0,5,0,0"
                                            IsChecked="True"/>
                                <RadioButton x:Name="Ratio4_3" 
                                            Content="4:3 (Стандарт)" 
                                            GroupName="AspectRatio" 
                                            Margin="0,5,0,0"/>
                                <RadioButton x:Name="Ratio1_1" 
                                            Content="1:1 (Квадрат)" 
                                            GroupName="AspectRatio" 
                                            Margin="0,5,0,0"/>
                                <RadioButton x:Name="Ratio9_16" 
                                            Content="9:16 (Вертикальный)" 
                                            GroupName="AspectRatio" 
                                            Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Настроение -->
                        <Border Grid.Column="2" 
                                Background="White" 
                                CornerRadius="10" 
                                Padding="20"
                                BorderThickness="1"
                                BorderBrush="#E2E8F0">
                            <StackPanel>
                                <TextBlock Text="Настроение" 
                                          Style="{StaticResource SectionHeader}"/>
                                <RadioButton x:Name="MoodCalm" 
                                            Content="Спокойное" 
                                            GroupName="Mood" 
                                            Margin="0,5,0,0"/>
                                <RadioButton x:Name="MoodEpic" 
                                            Content="Эпическое" 
                                            GroupName="Mood" 
                                            Margin="0,5,0,0"
                                            IsChecked="True"/>
                                <RadioButton x:Name="MoodFuturistic" 
                                            Content="Футуристическое" 
                                            GroupName="Mood" 
                                            Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Детализация -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,0,15"
                            BorderThickness="1"
                            BorderBrush="#E2E8F0">
                        <StackPanel>
                            <TextBlock Text="Детализация" 
                                      Style="{StaticResource SectionHeader}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Уровень:" 
                                       VerticalAlignment="Center"/>
                                <Slider x:Name="DetailSlider" 
                                       Grid.Column="1" 
                                       Minimum="1" 
                                       Maximum="10" 
                                       Value="5"
                                       Margin="10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock x:Name="DetailValueText" 
                                          Grid.Column="2" 
                                          Text="5" 
                                          Width="30"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Дополнительно -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="20"
                            BorderThickness="1"
                            BorderBrush="#E2E8F0">
                        <StackPanel>
                            <TextBlock Text="Дополнительно" 
                                      Style="{StaticResource SectionHeader}"/>
                            <CheckBox x:Name="IncludeTextCheckBox" 
                                     Content="Добавить текст"
                                     Margin="0,5,0,10"/>
                            <Grid x:Name="TextContentGrid" 
                                  Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Текст:" 
                                       VerticalAlignment="Center"/>
                                <TextBox x:Name="TextContentTextBox" 
                                        Grid.Column="1" 
                                        Text="Dream big"
                                        Margin="10,0,0,0"
                                        Padding="8"
                                        BorderBrush="#CBD5E1"
                                        BorderThickness="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Правая колонка: Предпросмотр и управление -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    BorderThickness="1"
                    BorderBrush="#E2E8F0">
                <StackPanel>
                    <TextBlock Text="Предпросмотр запроса" 
                              Style="{StaticResource SectionHeader}"/>
                    <TextBox x:Name="PreviewTextBox" 
                            Height="200" 
                            TextWrapping="Wrap" 
                            IsReadOnly="True"
                            FontStyle="Italic"
                            Text="Здесь будет сформированный запрос..."
                            Padding="10"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            Background="#F8FAFC"/>

                    <StackPanel Margin="0,20,0,0">
                        <Button x:Name="PreviewButton" 
                               Content="Обновить предпросмотр" 
                               Background="#E2E8F0"
                               Foreground="#475569"
                               FontWeight="SemiBold"
                               Padding="15,10"
                               BorderThickness="0"
                               Margin="0,0,0,10"/>

                        <Button x:Name="GenerateButton" 
                               Content="Сгенерировать обои" 
                               Background="#3B82F6"
                               Foreground="White"
                               FontWeight="Bold"
                               Padding="15,12"
                               BorderThickness="0"/>
                    </StackPanel>

                    <ProgressBar x:Name="ProgressBar" 
                                Height="8" 
                                IsIndeterminate="False"
                                Value="0"
                                Visibility="Collapsed"
                                Margin="0,20,0,0"/>

                    <TextBlock x:Name="StatusText" 
                              Text="Готов к созданию" 
                              Foreground="#64748B"
                              Margin="0,10,0,0"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Подвал с информацией -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                Padding="15"
                BorderThickness="1"
                BorderBrush="#E2E8F0">
            <TextBlock Text="🎯 Создавайте уникальные обои с помощью GigaChat AI" 
                      Foreground="#64748B"
                      TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>