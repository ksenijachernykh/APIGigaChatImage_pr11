<Window x:Class="GigaChatImageGeneratorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GigaChatImageGeneratorWPF"
        Title="Генератор изображений GigaChat" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        mc:Ignorable="d">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#3B82F6" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Генератор изображений" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="GigaChat API" 
                           Foreground="#E2E8F0" 
                           FontSize="14"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="1" 
                   Text="Опишите ваше изображение:" 
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="6" 
                BorderBrush="#E2E8F0" 
                BorderThickness="1"
                Margin="0,0,0,15">
            <TextBox x:Name="PromptTextBox" 
                     Height="70" 
                     TextWrapping="Wrap"
                     Text="Красивый пейзаж с горами и озером" 
                     BorderThickness="0"
                     Padding="10"
                     VerticalContentAlignment="Top"
                     FontSize="14"
                     Background="Transparent"/>
        </Border>

        <TextBlock Grid.Row="3" 
                   Text="Стиль изображения:" 
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <Border Grid.Row="4" 
                Background="White" 
                CornerRadius="6" 
                BorderBrush="#E2E8F0" 
                BorderThickness="1"
                Margin="0,0,0,15">
            <ComboBox x:Name="StyleComboBox" 
                      SelectedIndex="0"
                      BorderThickness="0"
                      Padding="10"
                      FontSize="14">
                <ComboBoxItem>Реализм</ComboBoxItem>
                <ComboBoxItem>Живопись</ComboBoxItem>
                <ComboBoxItem>Цифровой арт</ComboBoxItem>
                <ComboBoxItem>Мультфильм</ComboBoxItem>
                <ComboBoxItem>Комикс</ComboBoxItem>
            </ComboBox>
        </Border>

        <TextBlock Grid.Row="5" 
                   Text="Цветовая палитра:" 
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <Border Grid.Row="6" 
                Background="White" 
                CornerRadius="6" 
                BorderBrush="#E2E8F0" 
                BorderThickness="1"
                Margin="0,0,0,15">
            <ComboBox x:Name="PaletteComboBox" 
                      SelectedIndex="0"
                      BorderThickness="0"
                      Padding="10"
                      FontSize="14">
                <ComboBoxItem>Тёплая</ComboBoxItem>
                <ComboBoxItem>Холодная</ComboBoxItem>
                <ComboBoxItem>Пастельная</ComboBoxItem>
                <ComboBoxItem>Яркая</ComboBoxItem>
                <ComboBoxItem>Монохромная</ComboBoxItem>
            </ComboBox>
        </Border>

        <TextBlock Grid.Row="7" 
                   Text="Соотношение сторон:" 
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <Border Grid.Row="8" 
                Background="White" 
                CornerRadius="6" 
                BorderBrush="#E2E8F0" 
                BorderThickness="1"
                Margin="0,0,0,20">
            <ComboBox x:Name="AspectRatioComboBox" 
                      SelectedIndex="0"
                      BorderThickness="0"
                      Padding="10"
                      FontSize="14">
                <ComboBoxItem>16:9 (Широкоэкранный)</ComboBoxItem>
                <ComboBoxItem>4:3 (Классический)</ComboBoxItem>
                <ComboBoxItem>1:1 (Квадрат)</ComboBoxItem>
                <ComboBoxItem>9:16 (Вертикальный)</ComboBoxItem>
            </ComboBox>
        </Border>

        <Button Grid.Row="9" 
                x:Name="GenerateButton" 
                Content="СГЕНЕРИРОВАТЬ И УСТАНОВИТЬ ОБОИ" 
                Height="50" 
                Click="GenerateButton_Click"
                Background="#3B82F6"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,20"
                BorderThickness="0"
                Cursor="Hand"/>

        <Border Grid.Row="10" 
                Background="#EDF2F7" 
                CornerRadius="6" 
                Padding="12"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse x:Name="StatusEllipse"
                         Grid.Column="0" 
                         Width="12" 
                         Height="12" 
                         Fill="#10B981"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" 
                           x:Name="StatusTextBlock" 
                           Text="Готов к генерации обоев" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Window>